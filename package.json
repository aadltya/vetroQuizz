{
  "name": "quiz-app-monorepo",
  "version": "1.0.0",
  "description": "Full-stack Online Quiz Application",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd packages/backend && npm run dev",
    "dev:frontend": "cd packages/frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd packages/backend && npm run build",
    "build:frontend": "cd packages/frontend && npm run build",
    "test": "npm run test:backend",
    "test:backend": "cd packages/backend && npm run test",
    "db:migrate": "cd packages/backend && npx prisma migrate dev",
    "db:seed": "cd packages/backend && npx prisma db seed",
    "db:studio": "cd packages/backend && npx prisma studio",
    "install:all": "npm install && cd packages/backend && npm install && cd ../frontend && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "motion": "^12.23.22",
    "tailwind-merge": "^3.3.1"
  }
}
